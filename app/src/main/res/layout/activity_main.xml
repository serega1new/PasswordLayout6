<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/help_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_result"
        android:layout_marginBottom="@dimen/margin_result"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/text_box"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/result_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/ResultTextAppearance"
            tools:text="qQwWeE"
            />
        <ImageButton
            android:id="@+id/button_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_black_24dp"
            android:padding="@dimen/copy_button_padding"
            />



    </LinearLayout>

    <ImageView
        android:id="@+id/box_lock"
        android:src="@drawable/lock_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:id="@+id/simvols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="qQwWeE"
        />

    <EditText
        android:id="@+id/source_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="йЙцЦуУ"
        />

    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        />
    <CheckBox
        android:id = "@+id/isUppercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заглавные"
        />

    <CheckBox
        android:id = "@+id/isNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Цифры"
        />

    <CheckBox
        android:id = "@+id/isSpecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Спецфимволы"
        />

</LinearLayout>
